# Environment Configuration for Encrypted Email Service
# Copy this file to .env and update the values for your environment

# Domain Configuration
DOMAIN=yourdomain.com
ACME_EMAIL=admin@yourdomain.com

# Database Configuration
MONGO_USERNAME=admin
MONGO_PASSWORD=your-secure-mongodb-password
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-mongodb-root-password

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password

# Application Security
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Monitoring and Logging
GRAFANA_PASSWORD=your-secure-grafana-password
TRAEFIK_AUTH=admin:$2y$10$your-bcrypt-hashed-password

# Email Configuration (for notifications)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your-smtp-password

# Backup Configuration
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-32-chars
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_TIMEOUT=3600000
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,zip

# Performance Configuration
NODE_OPTIONS=--max-old-space-size=2048
WORKER_PROCESSES=auto
CACHE_TTL=3600

# Development Configuration (only for development)
NODE_ENV=production
LOG_LEVEL=info
DEBUG_MODE=false